package hr.fer.zemris.optjava.dz2;

import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

import Jama.Matrix;

public class ImageTrajectory {
	
	private BufferedImage bi;
	private Matrix x;
	
	public ImageTrajectory(Matrix x) {
		bi = new BufferedImage(400, 400, BufferedImage.TYPE_INT_ARGB);
		this.x = x;
	}
	
	public void put(Matrix newX) {
		Graphics2D ig2 = bi.createGraphics();
		ig2.setPaint(Color.black);
		int x1 = (int) x.get(0, 0);
		int y1 = (int) x.get(1, 0);
		int x2 = (int) newX.get(0, 0);
		int y2 = (int) newX.get(1, 0);
		ig2.drawLine(x1, y1, x2, y2);
	}
	
	public void save() {
		try {
			ImageIO.write(bi, "PNG", new File("/home/filip/Pictures/traj.PNG"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
